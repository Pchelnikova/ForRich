
@model ForRich.Models.DBModels.Profit

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New Profit:</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("_AddProfit", "Home", FormMethod.Post))
                {
                    @Html.LabelFor(m => m.Sum)
                    <br />
                    @Html.TextBoxFor(m => m.Sum)
                    
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Descriotion</label>
                        <br />
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                    </div>
                    <input type="submit" class="btn btn-primary" value="OK">
                }
                <div class="modal-footer">

                    @Html.ActionLink("Close", "Profit", null, new { @class = "btn btn - primary btn - sm" })


                </div>

            </div>

        </div>
    </div>
</div>
