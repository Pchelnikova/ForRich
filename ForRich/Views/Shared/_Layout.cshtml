<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FOR RICH</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-expand-sm navbar-dark navbar-fixed-top bg-info">
        <a class="navbar-brand" href="#">
            <img src="Content/money.jpg" width="60" height="40" alt="">
        </a>
        <div class="container">
            <div class="navbar-header">

                @Html.ActionLink("FOR RICH", "Index", "Home", new { area = "", @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item"><a href="/Home/Profits" class="nav-link">Profits</a></li>
                    <li class="nav-item"><a href="/Home/Expences" class="nav-link">Expences</a></li>
                    <li class="nav-item"><a href="/Home/Plan_List" class="nav-link">Plan List</a></li>
                    <li class="nav-item"><a href="/Home/Wish_List" class="nav-link">Wish List</a></li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
